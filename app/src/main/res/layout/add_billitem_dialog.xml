<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="220dp">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="311dp"
        android:layout_height="29dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="52dp"
        android:text="Add Items"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_name_dialog"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/item_quantity_dialog"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name_dialog" />

    <EditText
        android:id="@+id/item_price_dialog"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name_dialog" />

    <Button
        android:id="@+id/add_bill_item_dialog"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:text="Add Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_quantity_dialog" />
</androidx.constraintlayout.widget.ConstraintLayout>